<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-body">
          <%= render 'question', question: @question %>
          <a href="#" class="btn btn-secondary">Ответить</a>
          <%= link_to 'Изменить вопрос', edit_question_path(@question), class: "btn btn-success" %>
          <div style="margin-top: 1%">
            <%= button_to 'Удалить вопрос', question_path(@question), method: :delete, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>