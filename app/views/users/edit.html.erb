<%= form_with model: @user, html: { multipart: true } do |f| %>

  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-5">
        <div class="card">
          <div class="card-header" style="background-color: #CCCCCC;">
            <h2>Редактировать профиль</h2>
          </div>
          <div class="card-body">
            <% if @user.errors.any? %>
              <% @user.errors.full_messages.each do |message| %>
                <p><%= message %></p>
              <% end %>
            <% end %>
            <div class="form-group" style="margin-bottom: 15px">
              <%= f.label :name, "Имя" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group" style="margin-bottom: 15px">
              <%= f.label :nickname, "Никнейм" %>
              <%= f.text_field :nickname, class: "form-control" %>
            </div>
            <div class="form-group" style="margin-bottom: 15px">
              <%= f.label :email, "Email" %>
              <%= f.email_field :email, class: "form-control" %>
            </div>

            <div class="form-group" style="margin-bottom: 15px">
              <%= f.label :password, "Пароль" %>
              <%= f.password_field :password, class: "form-control" %>
            </div>
            <div class="form-group" style="margin-bottom: 15px">
              <%= f.label :avatar, "Аватар" %>
              <%= f.file_field :avatar, class: "form-control-file" %>
              <% if @user.avatar? %>
                <div class="mt-3">
                  <%= image_tag @user.avatar.url(:thumb), class: "rounded-circle", alt: @user.name, width: "150", height: "150" %>
                </div>
              <% end %>
            </div>
            <div class="form-group mt-4">
              <%= f.submit "Обновить профиль", class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
