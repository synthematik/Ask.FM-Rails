<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="user-profile">
        <div class="profile-header">
          <h1>Мой профиль</h1>
        </div>
        <div class="profile-body">
          <div class="profile-info">
            <h3><%= @user.name %></h3>
            <p>Имя пользователя: <%= "@#{@user.nickname}" %></p>
            <p>Email: <%= @user.email %></p>
          </div>
          <div class="profile-questions">
            <h2>Мои вопросы</h2>
            <% if @user.questions.any? %>
              <ul>
                <% @user.questions.each do |question| %>
                  <div class="card" style="background-color: #f8f9fa; margin-left: -30px">
                    <div class="card-body">
                      <%= render partial: "questions/question", locals:{ question: question} %>
                      <%= button_to 'Ответить', question_path(question),class: "btn btn-secondary"%>
                    </div>
                  </div>

                <% end %>
              </ul>
            <% else %>
              <p>Вопросов пока нет</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>