<div class="container mt-4">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <% @users.each do |user| %>
        <div class="card mb-3">
          <div class="card-body">
            <p><small class="text-body-secondary"> <%= l(user.updated_at, format: :short) %> </small></p>
            <h5 class="card-title" style="margin-bottom: 25px"><%= user.nickname.truncate(50) %></h5>
            <%= link_to 'Подробнее', user_path(user.id), class: 'btn btn-secondary' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>